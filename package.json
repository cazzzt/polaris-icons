{
  "name": "polaris-icons",
  "version": "1.0.0",
  "author": "Shopify Inc.",
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish",
    "build": "lerna run build",
    "start": "yarn --cwd packages/app-icon-explorer run start",
    "lint": "yarn run lint:js && yarn run lint:css",
    "lint:js": "yarn run eslint '**/*.{js,ts,tsx}'",
    "lint:css": "yarn run stylelint '**/*.{scss}'",
    "test": "jest",
    "release": "lerna publish && git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shopify/polaris-icons.git"
  },
  "bugs": {
    "url": "https://github.com/shopify/polaris-icons/issues"
  },
  "homepage": "https://github.com/shopify/polaris-icons#readme",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@shopify/images": "^1.1.5",
    "ajv": "^6.5.5",
    "eslint": "5.6.0",
    "eslint-plugin-shopify": "^26.1.1",
    "glob": "^7.1.3",
    "jest": "^24.0.0",
    "js-yaml": "^3.12.0",
    "lerna": "^2.9.0",
    "prettier": "^1.15.2",
    "rimraf": "^2.6.3",
    "rollup": "^0.66.5",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-svgo": "^1.0.1",
    "rollup-plugin-typescript2": "^0.17.1",
    "rollup-pluginutils": "^2.3.3",
    "stylelint": "^9.10.1",
    "stylelint-config-shopify": "^7.1.0",
    "svgo": "^1.1.1",
    "typescript": "^3.1.3"
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false
  },
  "eslintConfig": {
    "extends": [
      "plugin:shopify/typescript",
      "plugin:shopify/react",
      "plugin:shopify/jest",
      "plugin:shopify/node",
      "plugin:shopify/prettier"
    ],
    "settings": {
      "react": {
        "version": "16.7"
      }
    },
    "rules": {
      "no-console": "off",
      "node/exports-style": "off",
      "react/prop-types": "off"
    },
    "overrides": [
      {
        "files": [
          "**/rollup.config.js",
          "**/tests/*.js",
          "**/scripts/*.js"
        ],
        "rules": {
          "import/no-extraneous-dependencies": "off",
          "node/no-extraneous-require": "off"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-shopify/prettier"
    ],
    "rules": {
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  }
}
